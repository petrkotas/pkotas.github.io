{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve jekyll",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-v" ,
                "${workspaceRoot}:/srv/jekyll",
                "-p",
                "3000:3000",
                "-it",
                "jekyll/jekyll:3.8",
                "jekyll", 
                "serve"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}